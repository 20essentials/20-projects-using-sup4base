---
import { baseUrl } from '@/utils/functions';
---

<div class='container'>
  <table class='am-table-users'>
    <legend class='am-title'>Users</legend>
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th>Email</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody class='am-table-users-body'>
      <!--  <tr>
        <td>mariana_dev</td>
        <td>2025-11-09 14:32:10</td>
        <td>Admin</td>
        <td>mariana.dev@example.com</td>
      </tr>
      <tr>
        <td>lucas_player</td>
        <td>2025-11-08 19:45:03</td>
        <td>User</td>
        <td>lucas.player@example.com</td>
      </tr> -->
    </tbody>
  </table>
  <form class='container-add-new-user'>
    <input type='text' class='am-input-username' placeholder='Dominic' />
    <input type='text' class='am-input-role' placeholder='Software Engineer' />
    <input type='email' class='am-input-email' placeholder='dominic@gmail.com' />
    <button class='add-new-user-button'
      ><span>Create New User</span>
      <img src={baseUrl('/assets/add-user.gif')} alt='New User' /></button
    >
  </form>
</div>

<div class='container'>
  <table class='am-table-new-clients'>
    <legend class='am-title'>New Clients</legend>
    <thead>
      <tr>
        <th>Username</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody class='am-table-users-new-clients'> </tbody>
  </table>
</div>
<aside class='message'>
  Imagine that these two tables are on two different pages. When you update one
  table, the other table receives the changes thanks to a PostgreSQL trigger
</aside>

<script>
  import { $ } from '@/utils/functions';
  import { z } from 'zod';
  import { ZodError } from 'zod';
  import { supabase } from '@/lib/supabase';

  const $formContainerNewuser = $('.container-add-new-user');
  const $tableBodyUser = $('.am-table-users-body');
  const $tableBodyClients = $('.am-table-users-new-clients');
  const $inputUsername = $('.am-input-username') as HTMLInputElement;
  const $inputRole = $('.am-input-role') as HTMLInputElement;
  const $inputEmail = $('.am-input-email') as HTMLInputElement;

  document.addEventListener('DOMContentLoaded', async () => {
    // === Cargar usuarios globales ===
    const { data: users, error: userError } = await supabase
      .from('project_14_global_users')
      .select('*')
      .order('created_at', { ascending: false });

    if (userError) {
      console.error('Error fetching users:', userError);
      return;
    }

    users.forEach(user => {
      const createdAt = new Date(user.created_at)
        .toISOString()
        .replace('T', ' ')
        .substring(0, 19);
      $tableBodyUser.insertAdjacentHTML(
        'beforeend',
        `<tr>
        <td>${user.username}</td>
        <td>${user.role_text}</td>
        <td>${user.email ?? '-'}</td>
        <td>${createdAt}</td>
      </tr>`
      );
    });

    // === Cargar nuevos clientes (trigger-generated) ===
    const { data: clients, error: clientsError } = await supabase
      .from('project_14_new_clients')
      .select('*')
      .order('created_at', { ascending: false });

    if (clientsError) {
      console.error('Error fetching clients:', clientsError);
      return;
    }

    clients.forEach(client => {
      const createdAt = new Date(client.created_at)
        .toISOString()
        .replace('T', ' ')
        .substring(0, 19);
      $tableBodyClients.insertAdjacentHTML(
        'beforeend',
        `<tr>
        <td>${client.username}</td>
        <td>${createdAt}</td>
      </tr>`
      );
    });
  });

  // === Evento de envío del formulario ===
  $formContainerNewuser.addEventListener('submit', async e => {
    e.preventDefault();

    const username = $inputUsername.value.trim();
    const role = $inputRole.value.trim();
    const email = $inputEmail.value.trim();

    const schema = z.object({
      username: z.string().min(3, 'Username too short'),
      role: z.string().min(3, 'Role too short'),
      email: z.string().email('Invalid email')
    });

    try {
      schema.parse({ username, role, email });

      const {
        data: { user }
      } = await supabase.auth.getUser();

      if (!user) {
        alert('User not authenticated.');
        return;
      }

      // Insertar nuevo registro en project_14_global_users
      const { error: insertError } = await supabase
        .from('project_14_global_users')
        .insert([
          {
            id: user.id,
            username,
            role_text: role,
            email
          }
        ]);

      if (insertError) {
        console.error('Error inserting new user:', insertError);
        alert('Error creating user: ' + insertError.message);
        return;
      }

      // Mostrar en la tabla inmediatamente (sin esperar refetch)
      const createdAt = new Date()
        .toISOString()
        .replace('T', ' ')
        .substring(0, 19);

      $tableBodyUser.insertAdjacentHTML(
        'afterbegin',
        `<tr>
        <td>${username}</td>
        <td>${role}</td>
        <td>${email}</td>
        <td>${createdAt}</td>
      </tr>`
      );

      // El trigger creará automáticamente el registro en project_14_new_clients
      $tableBodyClients.insertAdjacentHTML(
        'afterbegin',
        `<tr>
        <td>${username}</td>
        <td>${createdAt}</td>
      </tr>`
      );

      // Limpiar inputs
      $inputUsername.value = '';
      $inputRole.value = '';
      $inputEmail.value = '';
    } catch (err) {
      if (err instanceof ZodError) {
        const messages: string = err.issues
          .map((issue) => `• ${issue.message}`)
          .join('\n');

        alert(messages || 'Invalid form data.');
      } else {
        alert('Unexpected error. Please try again.');
      }
    }
  });
</script>

<style is:global>
  .message {
    position: absolute;
    left: 1vmax;
    bottom: 1vmax;
    font-size: 0.9vmax;
    width: 25%;
    text-wrap: balance;
    mix-blend-mode: overlay;
    font-style: italic;
  }

  body {
    height: 100vh;
    width: 100%;
    background-image: url('/assets/project-14-bg.avif');
    background-size: cover;
    display: flex;
    flex-wrap: wrap;
    place-content: center;
    gap: 1vmax;

    * {
      user-select: none;
    }
  }

  .container {
    position: relative;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    overflow: hidden;
    box-shadow: 0 0 1.2vmax rgba(0, 0, 0, 0.1);

    * {
      font-size: 1vmax;
    }
  }

  .container-add-new-user {
    width: 100%;
    padding: 1vmax;
    text-align: center;
    border: 0.1vmax solid #000;
    background-color: #0001;
    align-items: center;
    display: flex;
    justify-content: center;
    gap: 1vmax;

    * {
      font-size: 0.8vmax;
    }

    input,
    button {
      padding: 0.4vmax 0.8vmax;
    }

    .add-new-user-button {
      width: auto;
      text-align: center;
      border: 0.1vmax dashed #0008;
      background-color: #04aa6d;
      align-items: center;
      display: flex;
      justify-content: center;

      transition: color 0.3s ease;

      &:active {
        opacity: 0.5;
      }

      &:hover {
        background-color: #fff1;
      }

      img {
        width: 2vmax;
        height: 2vmax;
        object-fit: cover;
        filter: contrast(200%);
      }
    }
  }

  .am-title {
    width: 100%;
    text-align: center;
    background-color: rgb(222, 222, 33);
    padding: 1vmax;
    font-weight: 700;
    font-size: 1.2vmax;
  }

  th,
  td {
    padding: 0.8vmax;
    background-color: rgba(255, 255, 255, 0.1);
    color: #000;
  }

  th {
    text-align: left;
  }

  thead {
    th {
      background-color: #7aca99;
    }
  }

  tbody {
    tr {
      &:hover {
        background-color: rgba(255, 255, 255, 0.3);
      }
    }
    td {
      position: relative;
      &:hover {
        &:before {
          content: '';
          position: absolute;
          left: 0;
          right: 0;
          top: -9999px;
          bottom: -9999px;
          background-color: rgba(255, 255, 255, 0.2);
          z-index: -1;
        }
      }
    }
  }
</style>
