---
import { baseUrl } from '@/utils/functions';
---

<div class='container'>
  <table class='am-table-users'>
    <legend class='am-title'>Users</legend>
    <thead>
      <tr>
        <th>Username</th>
        <th>Created At</th>
        <th>Role</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody class='am-table-users-body'>
      <tr>
        <td>mariana_dev</td>
        <td>2025-11-09 14:32:10</td>
        <td>Admin</td>
        <td>mariana.dev@example.com</td>
      </tr>
      <tr>
        <td>lucas_player</td>
        <td>2025-11-08 19:45:03</td>
        <td>User</td>
        <td>lucas.player@example.com</td>
      </tr>
    </tbody>
  </table>
  <form class='container-add-new-user'>
    <input type='text' class='am-input-username' placeholder='Dominic' />
    <input type='text' class='am-input-role' placeholder='Software Engineer' />
    <input type='email' class='am-input-email' placeholder='dominic@gmail.com' />
    <button class='add-new-user-button'
      ><span>Create New User</span>
      <img src={baseUrl('/assets/add-user.gif')} alt='New User' /></button
    >
  </form>
</div>

<div class='container'>
  <table class='am-table-new-clients'>
    <legend class='am-title'>New Clients</legend>
    <thead>
      <tr>
        <th>Username</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody class='am-table-users-new-clients'>
      <tr>
        <td>mariana_dev</td>
        <td>2025-11-09 14:32:10</td>
      </tr>
      <tr>
        <td>lucas_player</td>
        <td>2025-11-08 19:45:03</td>
      </tr>
    </tbody>
  </table>
</div>
<aside class="message">Imagine that these two tables are on two different pages. When you update one table, the other table receives the changes thanks to a PostgreSQL trigger</aside>

<script>
  import { $ } from '@/utils/functions';
  import { z } from 'zod';
  const $formContainerNewuser = $('.container-add-new-user');
  const $tableBodyUser = $('.am-table-users-body');
  const $tableBodyClients = $('.am-table-users-new-clients');
  const $inputUsername = $('.am-input-username') as HTMLInputElement;
  const $inputRole = $('.am-input-role') as HTMLInputElement;
  const $inputEmail = $('.am-input-email') as HTMLInputElement;

  $formContainerNewuser.addEventListener('submit', async e => {
    e.preventDefault();
    const username = $inputUsername.value.trim();
    const role = $inputRole.value.trim();
    const email = $inputEmail.value.trim();
    const schema = z.object({
      username: z.string().min(5),
      role: z.string().min(5),
      email: z.string().email()
    });
    try {
      schema.parse({ username, role, email });
      const createdAt = new Date().toISOString().replace('T', ' ').substring(0, 19);
      $tableBodyUser.insertAdjacentHTML(
        'beforeend',
        `<tr>
        <td>${username}</td>
        <td>${createdAt}</td>
        <td>${role}</td>
        <td>${email}</td>
      </tr>`
      );
      $tableBodyClients.insertAdjacentHTML(
        'beforeend',
        `<tr>
        <td>${username}</td>
        <td>${createdAt}</td>
      </tr>`
      );
      $inputUsername.value = '';
      $inputRole.value = '';
      $inputEmail.value = '';
    } catch (error) {
      alert('Please provide valid inputs:\n- Username and Role must be at least 5 characters long.\n- Email must be a valid email address.');
    }
  });

